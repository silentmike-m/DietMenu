@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Resetowanie has³a";
}

<div class="content-title">
    <img src="~/img/logo64x64.png" alt="DietMenu" class="content-logo">
    <span class="font-weight-light">Logowanie</span>
</div>

<div class="content-text">
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-error"></div>
        
        <div class="content-form-input-container">
            <label asp-for="Input.Email" class="content-form-input-label"></label>
            <input asp-for="Input.Email" autocomplete="email" aria-required="true" class="content-form-input"/>
            <span asp-validation-for="Input.Email" class="text-error"></span>
        </div>

        <div class="content-form-input-container">
            <label asp-for="Input.Password" class="content-form-input-label"></label>
            <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" class="content-form-input"/>
            <span asp-validation-for="Input.Password" class="text-error"></span>
        </div>
        
        <div class="content-form-input-container">
            <label asp-for="Input.ConfirmPassword" class="content-form-input-label"></label>
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" class="content-form-input"/>
            <span asp-validation-for="Input.ConfirmPassword" class="text-error"></span>
        </div>
    </form>
</div>

<div class="content-text content-center">
    <button type="submit" form="account" class="content-button content-button-primary content-button-elevated"><span class="content-button-text">ZRESETUJ</span></button>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
