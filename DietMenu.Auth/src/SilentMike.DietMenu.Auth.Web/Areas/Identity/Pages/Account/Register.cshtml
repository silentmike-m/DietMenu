@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}


<div class="content-title">
    <img src="~/img/logo64x64.png" alt="DietMenu" class="content-logo">
    <span class="font-weight-light">Logowanie</span>
</div>

<div class="content-text">
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-error"></div>
        
        <div class="content-form-input-container">
            <label asp-for="Input.Family" class="content-form-input-label"></label>
            <input asp-for="Input.Family" autocomplete="family" aria-required="true" class="content-form-input"/>
            <span asp-validation-for="Input.Family" class="text-error"></span>
        </div>

        <div class="content-form-input-container">
            <label asp-for="Input.Email" class="content-form-input-label"></label>
            <input asp-for="Input.Email" autocomplete="email" aria-required="true" class="content-form-input"/>
            <span asp-validation-for="Input.Email" class="text-error"></span>
        </div>
        
        <div class="content-form-input-container">
            <label asp-for="Input.FirstName" class="content-form-input-label"></label>
            <input asp-for="Input.FirstName" autocomplete="first-name" aria-required="true" class="content-form-input"/>
            <span asp-validation-for="Input.FirstName" class="text-error"></span>
        </div>
        
        <div class="content-form-input-container">
            <label asp-for="Input.LastName" class="content-form-input-label"></label>
            <input asp-for="Input.LastName" autocomplete="last-name" aria-required="true" class="content-form-input"/>
            <span asp-validation-for="Input.LastName" class="text-error"></span>
        </div>
        
        <div class="content-form-input-container">
            <label asp-for="Input.Password" class="content-form-input-label"></label>
            <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" class="content-form-input"/>
            <span asp-validation-for="Input.Password" class="text-error"></span>
        </div>
        
        <div class="content-form-input-container">
            <label asp-for="Input.ConfirmPassword" class="content-form-input-label"></label>
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" class="content-form-input"/>
            <span asp-validation-for="Input.ConfirmPassword" class="text-error"></span>
        </div>
        
        <div class="content-text">
            <hr role="separator" aria-orientation="horizontal" class="content-divider">
            
            <div class="content-form-input-container">
                <label asp-for="Input.RegisterCode" class="content-form-input-label"></label>
                <input asp-for="Input.RegisterCode" autocomplete="register-code" aria-required="true" class="content-form-input"/>
                <span asp-validation-for="Input.RegisterCode" class="text-error"></span>
            </div>
        </div>
    </form>
</div>

<div class="content-text content-center">
    <button type="submit" form="account" class="content-button content-button-primary content-button-elevated"><span class="content-button-text">UTWÓRZ</span></button>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
